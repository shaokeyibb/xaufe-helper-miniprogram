/* pages/space/space.wxss */
.personal-info-card{
  display: flex;
  flex-direction: column;

  margin: 0 10px;
  padding: 10px;

  border-radius: 10px;

  background-color:rgba(255, 140, 0, 0.685);
}

.personal-info-card___info{
  display: flex;
  flex-direction: row;

  justify-content: space-around;
  align-items: center;

  padding-bottom: 20px;
}

.personal-info-card___info__text{
  display: flex;
  flex-direction: column;

  height: 100%;
  width: 30%;
  
  justify-content: space-around;
}

.personal-info-card___info__text text{
  text-align: center;
  text-overflow: ellipsis;
}

.personal-info-card___info image {
  width: 200rpx;
  height: 200rpx;

  border-radius: 20%;
}

.menus{
  display: flex;
  flex-direction: column;

  margin-top: 10px;
  padding: 10px;
}

.menus___item {
  display: inline-flex;
  flex-direction: row;
  align-items: center;

  padding-bottom: 5px;
}

.menus___item__icon{
  margin: 3px;
}