/* pages/space/space.wxss */
.personal-info-card{
  display: flex;
  flex-direction: row;

  justify-content: space-around;
  align-items: center;

  padding: 20rpx;

  height: 20%;
}

.personal-info-card .personal-info-card___text{
  display: flex;
  flex-direction: column;

  height: 100%;
  width: 30%;
  
  justify-content: space-around;
}

.personal-info-card .personal-info-card___text text{
  text-align: center;
  text-overflow: ellipsis;
}

.personal-info-card image {
  width: 200rpx;
  height: 200rpx;

  border-radius: 10%;
}

.menus{
  display: flex;
  flex-direction: column;

  padding: 20rpx;
}

.menus___item {
  display: inline-flex;
  flex-direction: row;
  align-items: center;

  padding-bottom: 5px;
}

.menus___item__icon{
  margin: 3px;
}